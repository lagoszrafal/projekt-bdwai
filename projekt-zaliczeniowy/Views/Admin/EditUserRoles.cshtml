@model projekt_zaliczeniowy.Models.EditUserRolesViewModel

<h2>Edytuj role dla: @Model.UserEmail</h2>

<form asp-action="UpdateRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <label>Wybierz nową rolę:</label>
        <select name="selectedRole" class="form-control">
            @{
                string cr = Model.CurrentRoles[0];
            }
            @foreach (string role in Model.AllRoles)
            {
                    if(role == cr)
                    {
                        <option selected="selected" value="@role">@role</option>
                    }
                    else
                    {
                        <option value="@role">@role</option>
                    }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Zapisz zmiany</button>
</form>