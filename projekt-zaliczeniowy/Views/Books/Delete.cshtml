@model projekt_zaliczeniowy.Models.Books

@{
    ViewData["Title"] = "Usuń książkę";
}

<h1>Usuń książkę</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Regal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Regal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataWypozyczenia)
        </dt>
        <dd class = "col-sm-10">
            @{
                @if (Model.UserId!=null)
                {
                    @Html.DisplayNameFor(model => model.DataWypozyczenia)
                }
                else
                {
                    <span class="badge bg-info">Dostępna</span>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Nazwa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
